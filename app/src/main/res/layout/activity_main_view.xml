<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_column="2"
    android:layout_row="6"
    tools:context=".MainActivityController">

    <EditText
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_row="0"
        android:id="@+id/amountEditText"
        android:background="@color/amountEditTextbg"
        android:textSize="30dp"
        android:hint="@string/amountEditText"
        android:layout_columnSpan="2" />

    <TextView
        android:id="@+id/percentTextView"
        android:layout_width="114dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/percentTextView"
        android:textSize="30dp" />

    <SeekBar
        android:id="@+id/percentSeekView"
        android:layout_marginTop="15dp"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:progress="15" />
    <TextView
        android:id="@+id/tiplabelTextView"
        android:layout_width="114dp"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/tipLabelTextView"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@color/outputTextViewbg"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/totalLabelTextView"
        android:layout_width="114dp"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/totalLabelTextView"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:background="@color/outputTextViewbg"
        android:textSize="24sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="8dp"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        >

        <ImageButton
            android:id="@+id/pizza"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="addToTotal"
            android:tag="2.50"
            android:background="@drawable/pizza"
            />

        <ImageButton
            android:id="@+id/shake"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="addToTotal"
            android:tag="2.25"
            android:background="@drawable/shake"
            />

        <TextView
            android:id="@+id/pizzaText"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="1"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:text="$2.50"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/shakeText"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="1"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:text="$2.25"
            android:textSize="18dp"
            />

        <ImageButton
            android:id="@+id/burger"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="addToTotal"
            android:tag="3.00"
            android:background="@drawable/burger"
            />

        <ImageButton
            android:id="@+id/fries"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="addToTotal"
            android:tag="1.75"
            android:background="@drawable/fries"
            />

        <TextView
            android:id="@+id/burgerText"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="3"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:text="$3.00"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/friesText"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="3"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:text="$1.75"
            android:textSize="18dp"
            />

        <ImageButton
            android:id="@+id/chicken"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="addToTotal"
            android:tag="2.75"
            android:background="@drawable/chicken"
            />

        <ImageButton
            android:id="@+id/donut"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="addToTotal"
            android:tag="1.5"
            android:background="@drawable/donut"
            />

        <TextView
            android:id="@+id/chickenText"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="5"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:text="$2.75"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/donutText"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="5"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:text="$1.5"
            android:textSize="18dp"
            />

    </GridLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:onClick="clearTotal"
        android:text="Clear"
        />
</GridLayout>
